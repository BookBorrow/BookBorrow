<div class="container">
<div class="row">
  <h2>The Bookborrow Database</h2>
  <%= render "form" %>
</div>
</div>

<br>

<ul class="list-group container">
<% @books.each do |book|%>
  <li class="list-group-item container">
      <div class="row center-block">
      <div class="col-sm-12 col-md-2">
      <p><%= link_to image_tag(book.cover_url), book %></p>
      </div>
      <div class="col-md-9 col-sm-10">
      <div class="row center-block">
        <h3><%= link_to book.title, book %>
          <small><%= link_to book.author, :controller => "books", :query => book.author %></small>
        </h3>
      
      <% if current_user %><small><%= button_to 'Add To Library', user_user_books_path(current_user, :user_book =>{:from_isbn=> book.isbn}),method: :create %></small><% end %>

       <span class="text-muted">ISBN <%= book.isbn %> </span>
        <p class="text-muted">
        <strong>Synopsis</strong><br />
        <td><%= truncate(book.description, length:250, separator: " ", omission: "...") %></td>
        
      </div>

      </div>
      </div>
  </li>
  <% end %>
</ul>

<%= paginate @books %>
