<div class="container">
<div class="row"><div class="col-md-8"><h2>The Bookborrow Database</h2><%= render "form" %></div></div>


<br>

<ul class="list-group container">
<% @books.each do |book|%>
  <li class="list-group-item container">
      <div class="row">
      <div class="col-sm-5 col-md-2">
      <p><%= link_to image_tag(book.cover_url), book %></p>
      </div>
      <div class="col-md-9 col-sm-7">
      <div class="row">
      <h3><%= link_to book.title, book %>
      <small><%= link_to book.author, :controller => "books", :query => book.author %></small></h3>
      <% if current_user %><small><%= button_to 'Add To Library', user_user_books_path(current_user, :user_book =>{:from_isbn=> book.isbn}),method: :create %></small><% end %>
      <span class="text-muted">ISBN <%= book.isbn %> </span>
      </div>
      <div class="row">
        <strong>Synopsis</strong>
        <p class="text-muted"><%= book.description %></p>
      </div>

      </div>
      </div>
  </li>
  <% end %>
</ul>





<%= paginate @books %>
