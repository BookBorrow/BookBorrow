<ul class="list-group container-fluid col-md-offset-4">
  <% @books.each do |book|%>
  <li class="list-group-item container-fluid" data-ISBN="<%=book.isbn%>">
    <p><%= link_to image_tag(book.cover_url), book %></p>
    <h3><%= link_to book.title, book %>
    <br>
    <small><%= link_to book.author, :controller => "books", :query => book.author %></small>
    </h3>
    <span class="text-muted">ISBN <div class="ISBN"><%= book.isbn %></div> </span>
    <br>
    <%=  button_tag ("Loan"), class: :setISBN%>
  </li>
  <% end %>
</ul>