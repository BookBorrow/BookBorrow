<div class="container">
  <div class="row">
    <h2>Share your books <em>and</em> get them back.</h2>
    <h4>Keep track of who's borrowing your books with BookBorrow.</h4>
    <div class="border-form-div col-sm-12">
      
      <div class="form-group">
        <%= form_tag books_path, method: :get, class: "form-inline"  do %>
        <%= label_tag(:book_title, "What book do you want to loan out?") %>
         <%= text_field_tag :book_title, params[:book_title], class: "form-control max-width-80", placeholder: "Search by title, etc", id: 'wbooksearch'%>
        <br>
        <%= label_tag(:borrower_name, "Who are you loaning it to?") %>
         <%= text_field_tag :borrower_name, params[:borrower_name], class: "form-control max-width-80", placeholder: "Borrower's Name"%>
        <br>
         <%= label_tag(:borrower_email, "Where can we send overdue notices?", :"data-toggle"=> "tooltip", :"data-placement"=>"top", :title=>"Borrower emails are totally optional, and we'll only send emails when and if you ask us to.") %>
         <%= text_field_tag :borrower_email, params[:borrower_email], class: "form-control max-width-80", placeholder: "Borrower's Email"%>
        <br>
        <%= label_tag("When do you want your book back?") %>
         <%= date_field_tag :borrow_due_date %>
        <br>
        <br>
        <%= hidden_field_tag(:bookISBN)%>
        <%= submit_tag "Submit", class: "btn btn-primary"  %>
        <% end %>
        <p><i>*We promise to only email them once.</i></p>
      </div>
    </div >
    <!-- Partial for book query -->
    <div id="bookquery" class="col-md-8"></div>
  </div>
</div>