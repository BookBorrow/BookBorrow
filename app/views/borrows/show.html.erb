    <button class="btn-warning">Send Reminder</button>
  <% end %>
  </li>
  <li class="list-group-item"><strong>Returned: </strong><%= @borrow.returned %></li>
</ul>


<div class="well">
<h2>Book</h2>
<%= render @user_book.book %>
</div>
