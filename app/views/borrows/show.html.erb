
<h1>Lending Details</h1>
<ul class="list-group">
  <li class="list-group-item"><strong>Checkout Date: </strong><%= @borrow.borrow_date %></li>
  <li class="list-group-item" <%= "style=color:red" if @borrow.overdue? %> ><strong>Due Date: </strong><%= @borrow.due_date %></li>
  <li class="list-group-item">
    <strong>Borrower Email: </strong><%= @borrow.borrower_email %>
