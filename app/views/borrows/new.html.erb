<div class="border-form-div">
<%= form_for [@user_book, @borrow] do |f| %>

  <div class="form-group">
    <%= f.label "Today's date" %><br>
    <%= f.date_select :borrow_date %>
  </div>

  <div class="form-group">
    <%= f.label "Due date (days from today)" %>
    <%= f.number_field :duration_in_days %>
  </div>

  <div class="form-group">
    <%= f.label "Borrower's name" %>
    <%= f.text_field :borrower_name %>
  </div>

  <div class="form-group">
    <%= f.label "Borrower's email" %>
    <%= f.text_field :borrower_email %>
  </div>

  <%= f.submit %>
<% end %>
</div>
