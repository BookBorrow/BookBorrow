<div class="border-form-div">
<%= form_for [@user_book, @borrow] do |f| %>
  <input type="hidden" name="borrow[borrow_date]" value="<%= Date.today %>">

  <div class="form-group">

    <%= label_tag "borrow_due_date" %>
    <%= date_field_tag "borrow[due_date]", nil, :class => "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :borrower_name %>
    <%= f.text_field :borrower_name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :borrower_email %>
    <%= f.text_field :borrower_email, :class => "form-control max-width-80" %>
  </div>

  <%= link_to "Back", user_user_books_path(@user_book.user), :class => "btn btn-default" %>
  <%= f.submit "Loan", :class => "btn btn-primary" %>
  
<% end %>
</div>
