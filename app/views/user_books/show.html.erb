<table class="table">
<%= render @user_book %>
</table>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content" style="margin-left:25%;width:50%">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Loan</h4>
      </div>
      <div class="modal-body">
        <%= render :partial => 'borrows/form', :locals => { :borrow => @borrow } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" id="new_borrow_submit" class="btn btn-primary">Submit</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<%= link_to "back", user_path(@user_book.user), :class => "btn btn-default" %>
